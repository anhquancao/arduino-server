extends layout

block content
    .container-fluid
        .row
            h1= title
            form(action='/store-button',method="post")
                .form-group
                    label(for='name') Name:
                    input#name.form-control(type='text',required=true,name="name")
                .form-group
                    label(for='port') Port:
                    input#port.form-control(type='number',required=true,name="port")
                .form-group
                    label(for='state') State:
                    select#state.form-control(required=true,name="state")
                        option(value=0) off
                        option(value=1) on
                button.btn.btn-default(type='submit') Submit

